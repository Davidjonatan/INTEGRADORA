<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.views.DetalleComedero">

    <TextView
        android:id="@+id/tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Detalles Generales Del Comedero"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar" />
    <TextView
        android:id="@+id/ultimaActualizacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Ultima actualización: "
        android:textColor="#000000"
        android:textSize="22sp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="12dp"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tittle" />






    <TextView
        android:id="@+id/tvEstado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ultimaActualizacion"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:textSize="20dp"

        android:text="Estado:" />

    <TextView
        android:id="@+id/tvMascotaNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvEstado"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:textSize="20dp"

        android:text="Mascota:" />

    <TextView
        android:id="@+id/tvCantidadComida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvMascotaNombre"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:textSize="20dp"

        android:text="Cantidad de Comida:" />

    <TextView
        android:id="@+id/tvCantidadAgua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvCantidadComida"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:textSize="20dp"

        android:text="Cantidad de Agua:" />

    <TextView
        android:id="@+id/tvCantidadComidaServida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvCantidadAgua"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:textSize="20dp"

        android:text="Cantidad de Comida:" />

    <TextView
        android:id="@+id/tvCantidadAguaServida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvCantidadComidaServida"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:textSize="20dp"

        android:text="Cantidad de Agua:" />

    <TextView
        android:id="@+id/tvHumedad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="Humedad:"
        android:textSize="20dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCantidadAguaServida" />

    <TextView
        android:id="@+id/tvSeco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvHumedad"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="20dp"
        android:visibility="gone"

        android:background="@drawable/error_background"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:text="Ambiente seco." />

    <TextView
        android:id="@+id/tvOptimo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvHumedad"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="18dp"
        android:visibility="gone"
        android:background="@drawable/success_background"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:text="Ambiente óptimo." />

    <TextView
        android:id="@+id/tvHumedo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvHumedad"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="18dp"
        android:visibility="gone"
        android:background="@drawable/medium_background"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:text="Ambiente muy húmedo." />



    <TextView
        android:id="@+id/tvGases"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvHumedo"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:text="Gases:" />

    <TextView
        android:id="@+id/tvTemperaturaAgua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvGases"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:text="Temperatura de Agua:" />

    <TextView
        android:id="@+id/tvFrio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvTemperaturaAgua"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="20dp"
        android:layout_marginBottom="12dp"

        android:visibility="gone"

        android:background="@drawable/ambiente_background"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:text="Agua Fria (0°C - 19°C)" />

    <TextView
        android:id="@+id/tvAmbiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvTemperaturaAgua"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="18dp"
        android:visibility="gone"
        android:background="@drawable/success_background"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="12dp"

        android:text="Agua en temperatura ambiente (20°C - 30°C)" />

    <TextView
        android:id="@+id/tvCaliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvTemperaturaAgua"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="18dp"
        android:visibility="gone"
        android:background="@drawable/error_background"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="12dp"

        android:text="Agua caliente (30°C - 38°C)" />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#56c6bd"
        android:padding="2dp"
        android:layout_marginBottom="16dp"
        android:text="Actualizar Datos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnServir"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        android:layout_marginTop="40dp"
        android:textColor="#000000" />



    <Button
        android:id="@+id/btnServir"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#56c6bd"
        android:padding="2dp"
        android:text="Servir Comida"
        app:layout_constraintStart_toEndOf="@id/btnUpdate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="20dp"
        android:textColor="#000000" />






    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#56c6bd"
        android:orientation="horizontal"
        android:padding="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="end"
        app:layout_constraintEnd_toEndOf="parent">
        <Button
            android:id="@+id/btnBack"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:backgroundTint="#f44336"
            android:text="Regresar"
            android:textColor="#F5F5F5"
            android:layout_marginTop="5dp"
            />
    </LinearLayout>
    <!-- Barra inferior -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/llFeeders"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#56c6bd"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivFeeders"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/comedero"
                android:contentDescription="Comederos" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comederos"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivAccount"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/perfil"
                android:contentDescription="Mi cuenta" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mi cuenta"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>